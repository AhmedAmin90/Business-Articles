<p id="notice"><%= notice %></p>

<!-- Feature img section  -->
  <div class="card bg-dark text-white">
   <%= image_tag @article.image , class: "card-img"%>
  <div class="card-img-overlay">
    <h5 class="card-title text-dark">Card title</h5>
    <p class="card-text text-dark">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
    <p class="card-text">Last updated 3 mins ago</p>
  </div>
</div>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>text:</strong>
  <%= @article.text %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @article.image %>
</p>

<p>
  <strong>Author:</strong>
  <%= @article.author.name %>
</p>

<p>
  <strong>Category:</strong>
  <% @article.articles_categories.each do |category| %>
  <%= category.category.name %>
  <% end %>
</p>

<%= vote_or_unvote_btn(@article) %>
<%= @article.votes.count%>
<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
