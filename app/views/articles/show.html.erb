<p id="notice"><%= notice %></p>

<!-- Feature img section  -->
  <div class="card bg-gray  text-white p-3">
   <%= image_tag cloudinary_url(@article.image.key) , class: "card-img w-75 m-auto" , height: "600px" %>

  <div class="card-img-overlay text-center p-5">
    <h5 class="card-title text-dark bg-light w-50 m-auto "><%= @article.title %></h5>
    <p class="card-text text-dark m-3"><%= @article.created_at%></p>
  
  </div>
  <div class="text-center w-75 m-auto">
    <p class="card-text"><%= @article.text%></p>
    <p class="btn btn-warning w-25 ">Number of Votes: <%= @article.votes.count%></p>
    </div>
</div>
<div class="text-center mt-3">
    <%= link_to "All #{@article.categories.first.name } Articles " , category_path(@article.categories.first.id) , class: "btn bg-orange"%>
    <%= edit_articles(@article)%>
</div>




